---
import type { IEducation } from "~types/education"
import AppLink from "~components/AppLink.astro"

interface Props extends IEducation {}

const { university, universityHomepage, degree, major, GPA, startYear, endYear } = Astro.props
---

<!-- Education Details -->
<div>
  <!-- Attended Years -->
  <div class="py-2 text-(xs gray-400) tracking-wide uppercase">
    {startYear}{startYear !== endYear && <span> â€” {endYear ?? "Present"}</span>}
  </div>

  <div class="text-gray-800">
    <!-- University Name -->
    <AppLink class="font-medium" url={universityHomepage} showSuffixIcon title={university}>
      {university}
    </AppLink>

    <!-- Major & Degree -->
    <div class="flex text-sm leading-relaxed">
      {major}
      {!!degree && <span>, {degree}</span>}
    </div>

    <!-- GPA -->
    <div class="text-sm leading-relaxed">GPA: {GPA}</div>
  </div>
</div>
