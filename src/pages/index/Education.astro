---
import type { IEducation } from "~types/education"
import { getAllEducations } from "~api/education"
import EducationDetails from "./EducationDetails.astro"

interface Props {
  class?: string
}
const { class: className } = Astro.props

const educationDetailsList: IEducation[] = []

try {
  const educations: IEducation[] = await getAllEducations()
  educationDetailsList.push(...educations)
} catch (error) {
  console.error(error)
}
---

<section class={className}>
  <header
    class:list={[
      "sticky",
      "top-0",
      "z-20",
      "px-6",
      "py-5",
      "mb-4",
      "-mx-6",
      "md:px-12",
      "md:py-8",
      "md:-mx-12",
      "md:mb-8",
      "lg:px-24",
      "lg:-mx-24",
      "font-semibold",
      "text-sm",
      "tracking-widest",
      "uppercase",
      "text-gray-800",
      "dark:text-gray-300",
      "bg-gray-100",
      "dark:bg-gray-900",
    ]}
  >
    education
  </header>
  <ul>
    {
      educationDetailsList.map((it) => (
        <li class:list={["mb-12", "last-of-type:mb-0"]}>
          <EducationDetails {...it} />
        </li>
      ))
    }
  </ul>
</section>
