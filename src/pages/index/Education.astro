---
import type { IEducation } from "~types/education"
import { mostRecentYearComparator } from "~utils/comparators"
import EducationDetails from "./EducationDetails.astro"

interface Props {
  class?: string
}
const { class: className } = Astro.props

const educationDetailsList: IEducation[] = (
  [
    {
      university: "California State University, Long Beach",
      universityHomepage: "https://www.csulb.edu/",
      degree: "B.S.",
      major: "Computer Science",
      GPA: "3.65",
      startYear: 2018,
      endYear: 2020,
    },
    {
      university: "Mt. San Antonio College",
      universityHomepage: "https://www.mtsac.edu/",
      major: "Computer Science",
      GPA: "3.48",
      startYear: 2015,
      endYear: 2018,
    },
  ] satisfies IEducation[]
).toSorted(mostRecentYearComparator)
---

<section class={className}>
  <header
    class="sticky top-0 z-20 mb-4 bg-gray-100 px-6 py-5 text-(sm gray-800) font-semibold tracking-widest uppercase -mx-6 dark:(bg-transparent text-gray-300 backdrop-blur-lg)"
  >
    education
  </header>
  <ul>
    {
      educationDetailsList.map((it) => (
        <li class="mb-16 last-of-type:mb-0">
          <EducationDetails {...it} />
        </li>
      ))
    }
  </ul>
</section>
