---
import type { IEducation } from "~types/education"
import AppLink from "~components/AppLink.astro"

interface Props extends IEducation {}

const { university, degree, major, GPA, startYear, endYear, href } = Astro.props
---

<!-- Education Details -->
<div>
  <!-- Appended Years -->
  <div class="py-2 text-xs font-semibold tracking-wide uppercase">
    {startYear} â€” {endYear ?? "Present"}
  </div>

  <div class="font-medium">
    <!-- University Name -->
    <div>
      <AppLink href={href} showSuffixIcon title={university}>
        {university}
      </AppLink>
    </div>

    <!-- Major & Degree -->
    <div class="flex">
      {major}
      {Boolean(degree) && <span>, {degree}</span>}
    </div>

    <!-- GPA -->
    <div>GPA: {GPA}</div>
  </div>
</div>
