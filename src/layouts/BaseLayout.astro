---
import IconifyIconDisplayFix from "~components/IconifyIconDisplayFix.astro"
import AppFooter from "~components/AppFooter.astro"

const title: string = "Astro Theme Resume Minimalist â€” Jianqiang Du"
const description: string = "An open-sourced minimal resume site template built with Astro."
---

<html lang="en" class="scroll-smooth">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <link rel="apple-touch-icon" sizes="180x180" href=`${import.meta.env.BASE_URL}/apple-touch-icon.png` />
  <link rel="icon" type="image/png" sizes="32x32" href=`${import.meta.env.BASE_URL}/favicon-32x32.png` />
  <link rel="icon" type="image/png" sizes="16x16" href=`${import.meta.env.BASE_URL}/favicon-16x16.png` />
  <link rel="manifest" href=`${import.meta.env.BASE_URL}/site.webmanifest` />
  <link rel="stylesheet" href=`${import.meta.env.BASE_URL}/fonts/Inter/inter.css` />

  <body
    class:list={[
      "tabular-nums",
      "antialiased",
      "relative",
      "leading-relaxed",
      "text-gray-500",
      "bg-gray-100",
      "dark:bg-gray-900",
      "max-w-screen-lg",
      "mx-auto",
    ]}
  >
    <IconifyIconDisplayFix />

    <div class:list={["px-6", "md:px-12"]}>
      <slot />
    </div>

    <AppFooter />
  </body>
</html>

<style>
  :root {
    --font-family: system-ui, -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB",
      "Segoe UI", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
      "Segoe UI Symbol", "Noto Color Emoji";
    font-family: "Inter", var(--font-family);
  }

  @supports (font-variation-settings: normal) {
    :root {
      font-family: "InterVariable", var(--font-family);
    }
  }
</style>
