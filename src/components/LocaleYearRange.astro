---
import type { IExperience } from "~types/experience"
import type { TLocale } from "~types/i18n"

interface Props extends IExperience {
  class?: string
  locale?: TLocale | undefined
}
const { startYear, endYear, locale = "en", class: className } = Astro.props

const presentDisplayText: string = locale === "zh" ? "至今" : "Present"
---

<div class={className}>
  <span>{startYear}{startYear !== endYear && <span> — {endYear ?? presentDisplayText}</span>}</span>
</div>
