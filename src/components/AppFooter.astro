---
import AppLink from "./AppLink.astro"
import { Image } from "astro:assets"
import WechatDonationQr from "~assets/images/wechat-donation-qr.webp"
import BuyMeACoffeeDonationQr from "~assets/images/buy-me-a-coffee-donation-qr.webp"
---

<footer class:list={["text-center", "text-xs", "leading-relaxed", "px-6", "pt-24", "pb-12", "md:px-12", "md:pt-48"]}>
  <!-- Donations -->
  <div class:list={["flex", "items-center", "justify-center", "gap-8"]}>
    <!-- Wechat -->
    <Image
      class:list={["w-auto", "h-25", "lg:h-35", "dark:brightness-95"]}
      src={WechatDonationQr}
      alt="Scan QR to give a donation through Wechat."
    />
    <!-- Buy me a coffee -->
    <Image
      class:list={["w-auto", "h-25", "lg:h-35", "dark:brightness-95"]}
      src={BuyMeACoffeeDonationQr}
      alt="Scan QR to buy me a coffee."
    />
  </div>

  <!-- Site info -->
  <p class:list={["mt-8", "lg:mt-12"]}>
    <!-- Author -->
    <div>
      <span>
        Made with
        <span class="text-red-500">❤️</span>
        by
      </span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://yurikong.github.io"
          showSuffixIcon
        >
          jianqiang du
        </AppLink>
        .
      </span>
    </div>

    <!-- License -->
    <div>
      <span>Released under</span>
      <span class="inline-flex">
        <AppLink
          class:list={["text-gray-800", "dark:text-gray-400"]}
          url="https://opensource.org/license/mit"
          showSuffixIcon
        >
          The MIT License
        </AppLink>
        .
      </span>
    </div>

    <!-- Credit -->
    <div>
      <span>Credits —</span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://brittanychiang.com"
          showSuffixIcon
        >
          brittany chiang
        </AppLink>
        .
      </span>
    </div>

    <!-- Engine -->
    <div>
      <span>Site built with</span>
      <span class="inline-flex">
        <AppLink
          class:list={["capitalize", "text-gray-800", "dark:text-gray-400"]}
          url="https://astro.build"
          showSuffixIcon
        >
          Astro
        </AppLink>
        .
      </span>
    </div>
  </p>
</footer>
