{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "~/*": ["src/*"],
      "~api/*": ["src/api/*"],
      "~classes/*": ["src/classes/*"],
      "~components/*": ["src/components/*"],
      "~assets/*": ["src/assets/*"],
      "~layouts/*": ["src/layouts/*"],
      "~styles/*": ["src/styles/*"],
      "~utils/*": ["src/utils/*"],
      "~types/*": ["src/types/*"]
    }
  }
}
